<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:devices="clr-namespace:NetHome.ViewModels.Devices" 
             xmlns:template="clr-namespace:NetHome.Views.DevicePages"
             x:DataType="devices:RollerShutterViewModel"
             x:Class="NetHome.Views.DevicePages.RollerShutterPage"
             Title="{Binding DeviceClone.Name}"
             Shell.ForegroundColor="{DynamicResource Accent}"
             Shell.BackgroundColor="{DynamicResource Secondary}"
             Shell.TabBarIsVisible="False">
    <ContentPage.Content>
        <StackLayout>
            <template:DeviceInfoTemplate/>
            <Grid VerticalOptions="FillAndExpand">
                <BoxView CornerRadius="35,35,0,0" BackgroundColor="{DynamicResource Secondary}" VerticalOptions="FillAndExpand"/>
                <ScrollView>
                    <StackLayout>

                    </StackLayout>
                </ScrollView>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>